<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/beer_detail_layout" 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 
	android:orientation="vertical"
    tools:context=".BeerDetailActivity" >

    <TextView
        android:id="@+id/beer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textColor="#43bd00"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="SelectableText" />

    <TextView
        android:id="@+id/style_label" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textSize="16sp"
        android:textStyle="bold"
		android:text="@string/style_label_text"
	/>
    <TextView
    	android:id="@+id/beer_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#acacac"
        android:textSize="14sp"
        tools:ignore="SelectableText"
    />
    <TextView
    	android:id="@+id/beer_style_override"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#acacac"
        android:textSize="14sp"
        tools:ignore="SelectableText"
    />
    
    <TextView
        android:id="@+id/brewer_label" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textSize="16sp"
        android:textStyle="bold"
		android:text="@string/brewer_label_text"
	/>
    <TextView
    	android:id="@+id/brewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#acacac"
        android:textSize="14sp"
        tools:ignore="SelectableText"
    />
    
    <TextView
        android:id="@+id/description_label" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textSize="16sp"
        android:textStyle="bold"
		android:text="@string/description_label_text"
	/>
    <TextView
    	android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="#acacac"
        android:textSize="14sp"
        tools:ignore="SelectableText"
    />
</LinearLayout>