<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/section_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#888888"
        android:gravity="center"
        android:text="@string/section_text"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="SelectableText" />
    
    <TextView
        android:id="@+id/id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="SelectableText"
    />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/beer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:paddingTop="6dip"
            android:textColor="#43bd00"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="SelectableText"
        />
        <TextView
            android:id="@+id/beer_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingRight="8dip"
            android:textColor="#acacac"
            android:textSize="14sp"
            tools:ignore="SelectableText" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/brewer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="#acacac"
        android:textSize="14sp"
        tools:ignore="SelectableText"
    />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/beer_style_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/label_horizontal_padding"
            android:gravity="left"
            android:textColor="#acacac"
            android:textSize="14sp"
            tools:ignore="SelectableText" />

        <TextView
            android:id="@+id/beer_style_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#acacac"
            android:textSize="14sp"
            tools:ignore="SelectableText"
        />
    </LinearLayout>
    
    <TextView
        android:id="@+id/beer_style_override"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:gravity="left"
        android:textColor="#acacac"
        android:textSize="14sp"
        tools:ignore="SelectableText" 
    />
    
    <RelativeLayout 
		android:id="@+id/abv_ibu_srm_layout" 
	    android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" >
    <LinearLayout 
		android:id="@+id/abv_layout" 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true" >
    <TextView
        android:id="@+id/abv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/label_horizontal_padding"
        android:text="@string/abv_label_text"
        android:textStyle="bold" />
	<TextView
	    android:id="@+id/abv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    tools:ignore="SelectableText" />
	</LinearLayout>

    <LinearLayout
        android:id="@+id/ibu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
   	<TextView
   	    android:id="@+id/ibu_label"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:paddingRight="@dimen/label_horizontal_padding"
   	    android:text="@string/ibu_label_text"
   	    android:textStyle="bold" />
	<TextView
	    android:id="@+id/ibu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    tools:ignore="SelectableText" />
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/srm_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" >
   	<TextView
   	    android:id="@+id/srm_label"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:paddingRight="@dimen/label_horizontal_padding"
   	    android:text="@string/srm_label_text"
   	    android:textStyle="bold" />
	<TextView
	    android:id="@+id/srm"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    tools:ignore="SelectableText" />
	</LinearLayout>
   	</RelativeLayout>
    
</LinearLayout>